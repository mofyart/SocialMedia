generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id       String   @id @default(uuid())
    nick      String   @unique
    password  String
    createdAt DateTime @default(now())
}

model Post {
    id          String @id @default(uuid())
    namePost    String @unique
    nickName    String
    foto        String
    descryption String
    text        String
    createdAt   DateTime @default(now())
}
