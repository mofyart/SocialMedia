{
  "name": "socialmedia",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @socialmedia/backend",
    "w": "pnpm --filter @socialmedia/webapp",
    "dev": "pnpm -r --parallel dev",
    "lint": "concurrently  ' pnpm b lint' 'pnpm w lint'",
    "types": "concurrently  ' pnpm b types' 'pnpm w types'",
    "prettify": "pnpm -r --parallel prettify",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "glob": "11.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.2",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
